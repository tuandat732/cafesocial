<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:outlineSpotShadowColor="#271F1F"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/saveStoreImg"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ba_dinh" />

<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:background="@color/white">-->

                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_bookmark_24" />
<!--            </de.hdodenhof.circleimageview.CircleImageView>-->
        </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/saveStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="M.O.A Hàng Buồm"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/saveStoreRateBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        />

                    <TextView
                        android:id="@+id/saveStoreRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Đánh giá" />
                </LinearLayout>

                <TextView
                    android:id="@+id/saveStoreAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hàng Buồm"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/saveStoreTimeOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="07:00 - 08:00"

                  />

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>