<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:outlineSpotShadowColor="#271F1F"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/saleItemImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ba_dinh"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/saleItemTitle"
            android:padding="10dp"
            android:text="Order thả ga- giảm ngay nửa giá"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/saleItemStoreName"
            android:paddingHorizontal="10dp"
            android:text="MONO Coffee Lab"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/saleItemStoreAddress"
            android:text="03 hai Bà Trưng"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    
    
    </LinearLayout>
</androidx.cardview.widget.CardView>