<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/viewLoginRegisterBtn"
                android:gravity="center"
                android:paddingVertical="20dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnLoginRegister"
                    android:background="@drawable/btn"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="Đăng nhập / Đăng ký"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawViewUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingVertical="10dp"
                            android:background="#e03"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="100dp"
                                android:layout_marginLeft="30dp"
                                android:padding="50dp"
                                android:layout_gravity="center"
                                android:layout_width="75dp"
                                android:background="@color/white"
                                android:layout_height="75dp">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:src="@drawable/chill_2"
                                    android:layout_gravity="center"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/drawUsername"
                                    android:text="Tuan dat"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/drawEmail"
                                    android:textSize="13sp"
                                    android:layout_marginTop="3dp"
                                    android:text="taundat@gmail.com"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        android:gravity="center"
                        android:id="@+id/drawEditInfo"
                        android:paddingVertical="5dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_edit_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_weight="4"
                            android:text="Chỉnh sửa hồ sơ"
                            android:paddingVertical="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        android:gravity="center"
                        android:id="@+id/drawSave"
                        android:paddingVertical="5dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_bookmark_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_weight="4"
                            android:text="Danh sách đã lưu"
                            android:paddingVertical="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="CafeMe"
                android:background="@color/gray"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/drawHome"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="5"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_home_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="4"
                    android:text="Trang chủ"
                    android:paddingVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="5"
                android:id="@+id/drawDiscovery"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_local_fire_department_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="4"
                    android:text="Khám phá"
                    android:paddingVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="5"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/drawSale"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_ac_unit_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="4"
                    android:text="Khuyến mãi"
                    android:paddingVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="5"
                android:gravity="center"
                android:id="@+id/drawNewStore"
                android:paddingVertical="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_add_location_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="4"
                    android:text="Địa điểm mới"
                    android:paddingVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="Thông tin"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:background="@color/gray"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:weightSum="5"
                android:gravity="center"
                android:id="@+id/drawGioiThieu"
                android:paddingVertical="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_info_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="4"
                    android:text="Giới thiệu"
                    android:paddingVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="6"
                android:gravity="center"
                android:id="@+id/drawDieuKhoan"
                android:paddingVertical="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="2"
                    android:src="@drawable/ic_baseline_check_circle_outline_24"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="4"
                    android:text="Điều khoản Chính sách"
                    android:paddingVertical="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="6"
                android:gravity="center"
                android:id="@+id/drawLienHe"
                android:paddingVertical="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1.3"
                    android:src="@drawable/ic_baseline_add_location_24"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="4.7"
                    android:text="Liên hệ - Góp ý"
                    android:paddingVertical="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="Theo dõi chúng tôi"
                android:paddingLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/drawViewLogout"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:text="Đăng xuất"
                    android:textColor="@color/white"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="40dp"
                    android:id="@+id/drawLogout"
                    android:background="@drawable/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>